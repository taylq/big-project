<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title yield :title %></title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag "login_page", media: "all" %>
    <%= javascript_include_tag "login_page" %>
  </head>
  <body class="login">
    <div>
      <div class="login_wrapper">
        <div class="animate form login_form">
          <section class="login_content">
            <%= devise_error_messages! %>
            <%= form_for(resource, as: resource_name,
              url: registration_path(resource_name)) do |f| %>
              <h1><%= t "session.signup" %></h1>

              <%= f.label :name, class: "label-text" %>
              <%= f.text_field :name, autofocus: true, class: "form-control",
                placeholder: t("session.name"), required: true %>

              <%= f.label :email, class: "label-text" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email",
                class: "form-control", placeholder: t("session.email"),
                required: true %>

              <%= f.label :room, class: "label-text" %>
              <%= f.number_field :room, autofocus: true, class: "form-control",
                placeholder: t("session.room"), required: true %>

              <%= f.label :area_id, class: "label-text" %>
              <%= f.select :area_id, Area.all.pluck(:name, :id),
                {prompt: t("session.select_area")}, class: "form-control" %>

              <%= f.label :password, class: "label-text" %>
              <%= f.password_field :password, autocomplete: "off",
              class: "form-control", placeholder: t("session.password"),
              required: true %>

              <%= f.label :password_confirmation, class: "label-text" %>
              <%= f.password_field :password_confirmation, autocomplete: "off",
              class: "form-control", placeholder: t("session.password_confirmation"),
              required: true %>

              <%= f.submit "Sign up", class: "btn btn-login" %>
            <% end %>

            <%= render "devise/shared/links" %>
          </section>
        </div>
      </div>
    </div>
  </body>
</html>

<body class="login">
  <div>
    <div class="login_wrapper">
      <div class="animate form login_form">
        <section class="login_content">
          <%= form_for resource, as: resource_name,
            url: session_path(resource_name), remote: true do |f| %>
            <h1><%= t "session.login" %></h1>
            <%= f.label t("session.email"), class: "label-text" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "form-control", placeholder: t("session.email"),
              required: true %>
            <%= f.label t("session.password"), class: "label-text" %>
            <%= f.password_field :password, autocomplete: "off",
              class: "form-control", placeholder: t("session.password"),
              required: true %>
            <% if devise_mapping.rememberable? %>
              <div class="field remember-me checkbox">
                <%= f.check_box :remember_me, class: "flat" %>
                <%= f.label t("session.remember") %>
              </div>
            <% end %>
            <%= f.submit t("session.login"), class: "btn btn-login" %>
          <% end %>
          <%= render "devise/shared/links" %>
        </section>
      </div>
    </div>
  </div>
</body>
